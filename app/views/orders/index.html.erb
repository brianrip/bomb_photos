<div class="text-center">
<h1>Your Orders</h1>
    <table class = "table">
      <tr>
        <th> Order ID </th>
        <th> Order Price</th>
        <th> Placed on</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "Order: #{order.id}", order_path(order) %></td>
        <td><%= order.total_price %></td>
        <td><%= order.placed_at %></td>
      </tr>
      <% end %>
    </table>
</div>
