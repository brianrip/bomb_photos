<div class="jumbotron hero">
  <div class="container">
    <div class="col-md-7">
      <h1 class="brand">Bomb Photos</h1>
    </div>
    <div class=" col-md-offset-3 col-md-8">
      <h3 class="brand">Proffesional Images</h3>
    </div>
  </div>
</div>
<nav class="navbar navbar-inverse col-md-12">
  <div class="container">
    <ul class="nav navbar-nav navbar-right gif-links">
      <li><%= link_to "View All Photos", root_path, class: "glyphicon" %></li>
      <li><%= link_to "All Categories", categories_path, class: "glyphicon" %></li>
      <li><%= link_to "Shop By Studio", studios_path, class: "glyphicon" %></li>
      <li><%= link_to "Cart(#{@cart.total_items})", cart_path, class: "glyphicon glyphicon-shopping-cart" %></li>
      <% if current_user %>
        <li><%= link_to "#{current_user.email}'s_dashboard", dashboard_path, class: "glyphicon" %></li>
        <li><%= link_to "Log Out", logout_path, method: :delete, class: "glyphicon" %></li>
      <% else %>
        <li><%= link_to "Log In", login_path, class: "glyphicon" %></li>
        <li><%= link_to "Sign Up", new_user_path, class: "glyphicon" %></li>
      <% end %>
    </ul>
  </div>
</nav>
<div class="container-fluid">
  <div class ="col-md-12">
    <% flash.each do |type, message| %>
      <%= content_tag :div, sanitize(message), class: "alert alert-#{type}" %>
    <% end %>
  </div>
</div>
