  <%= form_for @studio do |f| %>
  <h3><%= f.label :name %>   <%= f.text_field :name, class: "form-control" %></h3>
  <h3><%= f.label :description %>   <%= f.text_field :description,  class: "form-control" %></h3>
  <h3><%= f.label :promo_image %></h3>   <%= f.file_field :promo_image, class: "form-control btn btn-default"%>
  <br>
    <% if current_user.studio_admin? || current_user.platform_admin?%>
      <%= f.submit "Update Studio", class: "btn btn-default btn-lg" %>
    <% else %>
      <%= f.submit "Create Studio", class: "btn btn-default btn-lg" %>
    <% end %>
  <% end %>
