<div class="container text-center">
<h1>Platform Admin</h1>
<h3>Active Studios</h3>

<h4>Jump to:</h4>
<div class="row">
  <div class="col-md-3">
    <%= link_to "Active", "active", class: "btn btn-default" %></li>
  </div>
  <div class="col-md-3">
    <%= link_to "Inactive", "inactive", class: "btn btn-default" %></li>
  </div>
  <div class="col-md-3">
    <%= link_to "Pending", "pending", class: "btn btn-default" %></li>
  </div>
  <div class="col-md-3">
    <%= link_to "Denied", "denied", class: "btn btn-default" %></li>
  </div>
</div>
<br/>
<table class = "table">
  <tr>
    <th>ID</th>
    <th>Studio Name</th>
    <th> View/Edit </th>
    <th>Created On</th>
    <th>Status</th>
    <th>Actions</th>
    <th>Number of Photos</th>
    <th>Number of Orders</th>
    <th>Studio Revenue</th>
  </tr>
  <div id="active_studios">
    <% @studios.each do |studio| %>
      <% if studio.active? %>
        <%= render partial: "partials/studio_data", locals: { studio: studio, button_text: "Deactivate", path: platform_admin_studio_path(studio) } %>
      <% end %>
    <% end %>
  </div>
</table>
</div>
